<div class="container">
<div class="container d-flex p-0 m-0">
  <div class="card-trip big ml-0">
    <!-- <img class="big-image" src=<%= @cocktail.url %> /> -->
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400 %>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @cocktail.name %></h2>

        <% @doses.each do |dose| %>
          <p><%= dose.description %> <%= dose.ingredient.name %></p>
        <% end %>
        <%= link_to "Add new ingredients", new_cocktail_dose_path(cocktail_id: @cocktail), class: "btn btn-primary mt-2"  %>
        <%= link_to "Edit", edit_cocktail_path(cocktail_id: @cocktail), class: "btn btn-warning mt-2" %>
        <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
