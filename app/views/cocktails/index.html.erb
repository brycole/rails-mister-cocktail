
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 p-1">
        <div class="card-trip">
          <!-- <img class="small-image" src=<%= cocktail.url %> /> -->
          <% if cocktail.photo.attached? %>
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
            <h2><%= cocktail.name %></h2>
            </div>
          <% end %>
            <!-- <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: "fill" %> -->
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
