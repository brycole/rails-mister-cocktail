
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 p-1">
        <div class="card-trip">
          <!-- <img class="small-image" src=<%= cocktail.url %> /> -->
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 400  %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2> <%= link_to cocktail.name, cocktail_path(cocktail)%> </h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
